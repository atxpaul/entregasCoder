extends layout 

block products
    h2(class="p-5 text-center")="Lista de productos"
    if productos.length
        div(class="table-responsive p-5")
            table(class="table table-dark p-5") 
                tr
                    th="Producto" 
                    th="Precio"
                    th="Imagen"
                each producto in productos
                    tr
                        td=producto.title 
                        td=producto.price 
                        td
                            img(src=producto.thumbnail style="width: 50px;")
    else
        div(class="alert alert-warning alert-dismissible fade show") 
            strong="No se encontraron productos."

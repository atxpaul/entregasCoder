extends layout 

block products
    h2(class="p-5 text-center")="Lista de productos"
    if productos.length
        div(class="table-responsive p-5")
            table(class="table table-dark p-5") 
                tr
                    th=Producto 
                    th=Precio 
                    th=Imagen
                each producto in productos.length
                tr 
                    td=producto.title 
                    td=producto.price 
                    td
                        
            
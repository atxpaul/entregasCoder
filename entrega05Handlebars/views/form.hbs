<h1 class="p-5 text-center">Ingrese datos</h1>
<br>

<form target="_blank" action="/api/productos" method="post" class="p-5">

    <div class="form-group">
        <label for="title"><b>Producto</b></label>
        <input id="title" class="form-control" type="text" name="title">
    </div>

    <div class="form-group">
        <label for="price"><b>Precio</b></label>
        <input id="price" class="form-control" type="number" step="0.01" name="price">
    </div>

    <div class="form-group">
        <label for="thumbnail"><b>URL imagen</b></label>
        <input id="thumbnail" class="form-control" type="text" name="thumbnail">
    </div>

    
    <!--<input onclick="window.location.href = 'http://localhost:8080/';" type="submit" class="btn btn-success mt-3 mb-5">-->
    <button class="btn btn-success mt-3 mb-5">Enviar</button>
    <a href="/productos" class="btn btn-dark mt-3 mb-5">Ver productos</a>
</form>
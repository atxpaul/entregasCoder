<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <title>Productos</title>
</head>

<body>
    <div class="container mt-3">
        <div class="jumbotron">

            <h2 class="p-5 text-center">Lista de Productos</h2>
            <% if (productos) { %>
                <div class="table-responsive p-5">
                    <table class="table table-dark p-5">
                        <tr>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Imagen</th>
                        </tr>
                        <% productos.forEach(function(product) { %>
                        <tr>
                            <td><%= product.title%></td>
                            <td><%= product.price%></td>
                            <td> <img class="img-fluid img-thumbnail" src="<%= product.thumbnail%>" alt="Imagen de <%= product.title%>" style="width: 50px;"></td>
                        
                        </tr>
                        <%});%>
                    </table>
                </div>
            <% } else { %>
            <div class="alert alert-warning alert-dismissible fade show">
                <strong>No se encontraron productos.</strong>
            </div>
            <% } %>
            <a href="/" class="btn btn-success mt-3 mb-5 m-5">AÃ±adir productos</a>
                        
        </div>
    </div>
</body>

</html>